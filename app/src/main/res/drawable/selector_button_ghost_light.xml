<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="@color/button_action_color">

	<item android:id="@android:id/mask">
		<shape android:shape="rectangle">

			<solid android:color="@color/button_action_color" />

			<corners android:radius="@dimen/margin_20dp" />

		</shape>
	</item>

	<item>
		<selector>

			<item
				android:drawable="@drawable/button_fill_normal_light"
				android:state_enabled="true"
				android:state_pressed="true" />

			<item
				android:drawable="@drawable/button_ghost_normal_light"
				android:state_enabled="true"
				android:state_pressed="false" />

			<item
				android:drawable="@drawable/button_disabled_light"
				android:state_enabled="false" />

		</selector>
	</item>

</ripple>