<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="mainViewModel"
			type="com.example.customview.ui.main.MainViewModel" />

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/main"
		android:background="@color/Gray"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.main.MainFragment">

		<com.example.customview.cv.edittextview.PrefixEditText
			android:id="@+id/textinput_prefix_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:viewModel="@{mainViewModel.prefix}" />

		<com.example.customview.cv.spinner.AdjustedAutoCompleteTextView
			android:id="@+id/curency_spinner"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			style="@style/AutoCompleteTextView"
			android:hint="enter your currency"
			android:text="@={mainViewModel.codeInputText}"
			android:layout_marginTop="30dp"
			android:completionThreshold="1"
			android:imeOptions="actionNext"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textinput_prefix_text" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>