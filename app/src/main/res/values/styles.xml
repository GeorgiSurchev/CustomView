<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AutoCompleteTextView" parent="TextInputEditText">
		<item name="enforceMaterialTheme">true</item>
		<item name="enforceTextAppearance">true</item>
		<item name="android:background">@null</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:dropDownVerticalOffset">-8dp</item>
	</style>

	<style name="TextInputEditText" parent="SingleLineTextInputEditText">
		<item name="android:maxLength">50</item>
	</style>

	<style name="SingleLineTextInputEditText">
		<item name="android:includeFontPadding">false</item>
		<item name="android:lines">1</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="ViewPagerStyle" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">@dimen/text_size_16sp</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="ExtendedTutorialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="android:textSize">@dimen/text_size_16sp</item>
		<item name="android:padding">0dp</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="ButtonGhost.Light" parent="Widget.AppCompat.Button">
		<item name="paddingStart">@dimen/padding_8dp</item>
		<item name="paddingEnd">@dimen/padding_8dp</item>
		<item name="android:background">@drawable/selector_button_ghost_light</item>
		<item name="android:textColor">@color/black</item>
	</style>
</resources>